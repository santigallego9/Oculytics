CREATE TABLE totals (
  sent INTEGER default 0,
  received INTEGER default 0,
  created_on DATETIME default current_timestamp,
  updated_on DATETIME default current_timestamp
);
CREATE TABLE mms_totals (
  sent INTEGER default 0,
  received INTEGER default 0,
  created_on DATETIME default current_timestamp,
  updated_on DATETIME default current_timestamp
);
CREATE TABLE contacts (
  id INTEGER PRIMARY KEY,
  number TEXT,
  sent INTEGER default 0,
  received INTEGER default 0,
  sent_mms INTEGER default 0,
  received_mms INTEGER default 0,
  created_on DATETIME default current_timestamp,
  updated_on DATETIME default current_timestamp,
  sent_updated_on DATETIME,
  received_updated_on DATETIME
);
CREATE TABLE streaks (
  id INTEGER PRIMARY KEY,
  contact_id INTEGER,
  streak INTEGER default 1,
  streak_updated_on DATETIME default current_timestamp
);
CREATE TABLE sms_sent (
  id INTEGER PRIMARY KEY,
  contact_id INTEGER,
  sent_on DATETIME default current_timestamp
);
CREATE TABLE sms_received (
  id INTEGER PRIMARY KEY,
  contact_id INTEGER,
  received_on DATETIME default current_timestamp
);
CREATE TABLE mms_sent (
  id INTEGER PRIMARY KEY,
  contact_id INTEGER,
  sent_on DATETIME default current_timestamp
);
CREATE TABLE mms_received (
  id INTEGER PRIMARY KEY,
  contact_id INTEGER,
  received_on DATETIME default current_timestamp
);
